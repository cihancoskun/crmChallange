<?xml version="1.0"?>
<configuration>
  <system.web>
    <compilation targetFramework="4.5.1"/>
    <httpRuntime targetFramework="4.5" maxRequestLength="4096" enableVersionHeader="false"/>
    <sessionState mode="Off"/>
    <httpCookies httpOnlyCookies="true"/>
    <customErrors mode="RemoteOnly" defaultRedirect="/home/index">
      <error statusCode="404" redirect="/s/404.html"/>
    </customErrors>
    <authentication mode="Forms">
      <forms loginUrl="~/User/Login" timeout="1000" name="__Auth"/>
    </authentication>
  </system.web>
</configuration>